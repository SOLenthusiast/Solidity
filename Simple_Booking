pragma solidity ^0.8.0;
// SPDX-License-Identifier: GPL-3.0

// Pay me, the owner, make sure I get 2 eth
// check the availability

contract MyContract {

    address payable public owner;
    enum Statuses { Vacant, Occupied}
    Statuses CurrentStatus;
    event GuestList(address _guest, uint _payment);

    constructor() {
        owner = payable(msg.sender);
        CurrentStatus = Statuses.Vacant;
    }

 
    receive() external payable {

        require(CurrentStatus == Statuses.Vacant,"We're booked nigga");
        require(msg.value >= 2 ether, "This ain't a cheap hotel bud!");
        owner.transfer(msg.value);
        CurrentStatus = Statuses.Occupied;
        emit GuestList(msg.sender, msg.value);
    }
}
